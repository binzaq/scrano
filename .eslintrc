{
    "root": true,
    "extends": "eslint:recommended",
    "parserOptions": { 
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env":{ 
        "es6": true,
        "node": true,
        "jest": true
    },
    "rules": {
        "no-cond-assign": 2,
        "comma-dangle": [2, "always"],
        "no-dupe-args": 2,
        "no-dupe-keys": 2,
        "no-duplicate-case": 2,
        "no-ex-assign": 2,
        "no-func-assign": 2,
        "no-invalid-regexp": 2,
        "no-obj-calls": 2,
        "no-unreachable": 0,
        "no-console": 0,
        "accessor-pairs": 2,
        "block-scoped-var": 2,
        "curly": [2, "all"],
        "default-case": 2,
        "dot-location": [2, "property"],
        "eqeqeq": [2, "allow-null"],
        "no-caller": 2,
        "no-case-declarations": 2,
        "no-div-regex": 2,
        "no-empty-function": 2,
        "no-eval": 2,
        "no-extend-native": 2,
        "no-fallthrough": 2,
        "no-floating-decimal": 2,
        "no-implied-eval": 2,
        "no-labels": 2,
        "no-lone-blocks": 2,
        "no-multi-spaces": 2,
        "no-native-reassign": 2,
        "no-new-wrappers": 2,
        "no-octal": 2,
        "no-octal-escape": 2,
        "no-redeclare": 2,
        "no-unmodified-loop-condition": 2,
        "no-with": 2,
        "wrap-iife": [2, "any"],
        "no-unused-vars": 0,
        "no-use-before-define": 2,
        "require-yield": 0,
        "global-require": 2,
        "handle-callback-err": [2, "^(err|error)$"],
        "no-new-require": 2,

        "array-bracket-spacing": [2, "always"],
        "block-spacing": [1, "never"],
        "brace-style": [2, "1tbs", {
            "allowSingleLine": true
        }],
        "camelcase": 2,
        "comma-spacing": [2, {
            "before": false,
            "after": true
        }],
        "comma-style": [2, "last"],
        "computed-property-spacing": [2, "never"],
        "indent": [2, 4, {
            "SwitchCase": 1
        }],
        "linebreak-style": [1, "unix"],
        "lines-around-comment": [1, {
            "beforeBlockComment": true
        }],
        "max-nested-callbacks": [1, 5],
        "keyword-spacing": 2,
        "max-len": [1, 200],
        "max-statements": [1, 200],
        "new-cap": [2, {
            "newIsCap": true,
            "capIsNew": false
        }],
        "new-parens": 2,
        "newline-per-chained-call": 1,
        "no-mixed-spaces-and-tabs": 2,
        "no-spaced-func": 2,
        "operator-linebreak": [2, "after", {
            "overrides": {
                "?": "before",
                ":": "before"
            }
        }],
        "semi": [2, "never"],
        "semi-spacing": 0,
        "no-extra-semi": 2,
        "space-before-blocks": [2, "always"],
        "space-before-function-paren": [0, "always"],
        "space-in-parens": [2, "never"],
        "space-infix-ops": 2,
        "space-unary-ops": [2, {
            "words": true,
            "nonwords": false
        }],
        "spaced-comment": [2, "always", {
            "markers": ["global", "globals", "eslint", "eslint-disable", "*package", "!"]
        }],

        "arrow-parens": 2,
        "arrow-spacing": [2, {
            "before": true,
            "after": true
        }],
        "constructor-super": 2,
        "generator-star-spacing": [2, {
            "before": true,
            "after": true
        }],
        "no-const-assign": 2,
        "no-dupe-class-members": 2,
        "no-new-symbol": 2,
        "no-this-before-super": 2,
        "no-var": 2,
        "prefer-const": 2,
        "yield-star-spacing": 2
    }
}